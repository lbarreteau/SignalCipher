# Environment Variables for SignalCipher

# ===== BINANCE API =====
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ===== DATABASE =====
DATABASE_URL=postgresql://user:password@localhost:5432/signalcipher
# or use SQLite for development:
# DATABASE_URL=sqlite:///signalcipher.db

# ===== REDIS CACHE =====
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_TTL=300

# ===== TELEGRAM NOTIFICATIONS =====
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ===== DISCORD NOTIFICATIONS =====
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# ===== APPLICATION SETTINGS =====
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG=True

# ===== SCANNER SETTINGS =====
SCAN_INTERVAL=300  # seconds (5 minutes)
TOP_CRYPTOS_COUNT=10
DEFAULT_TIMEFRAMES=1h,4h,1d

# ===== ML MODEL SETTINGS =====
MODEL_CONFIDENCE_THRESHOLD=0.70
RETRAIN_FREQUENCY_DAYS=7
USE_GPU=False  # Set to True if you have CUDA-enabled GPU

# ===== RISK MANAGEMENT =====
MAX_POSITION_SIZE=0.10  # 10% of capital
STOP_LOSS_PERCENTAGE=0.02  # 2%
TAKE_PROFIT_PERCENTAGE=0.05  # 5%

# ===== BACKTESTING =====
INITIAL_CAPITAL=10000
COMMISSION_RATE=0.001  # 0.1% per trade

# ===== PATHS =====
DATA_DIR=data/
MODELS_DIR=models/
LOGS_DIR=logs/
